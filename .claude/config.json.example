{
  "mcpServers": {
    "example-mcp-server": {
      "command": "node",
      "args": ["/path/to/mcp-server.js"],
      "env": {
        "API_KEY": "your-api-key-here",
        "DEBUG": "true"
      },
      "disabled": false
    },
    "another-server": {
      "command": "python",
      "args": ["-m", "mcp_server"],
      "disabled": true
    }
  },
  "plugins": {
    "example-plugin": {
      "enabled": true,
      "config": {
        "option1": "value1",
        "option2": true
      }
    }
  },
  "skills": {
    "example-skill": {
      "enabled": true,
      "config": {
        "customOption": "customValue"
      }
    }
  },
  "hooks": {
    "user-prompt-submit-hook": {
      "command": "bash",
      "args": ["-c", "echo 'User prompt submitted'"],
      "env": {
        "HOOK_TYPE": "user-prompt-submit"
      }
    },
    "tool-call-hook": {
      "command": "node",
      "args": ["/path/to/tool-call-logger.js"]
    }
  },
  "commands": {
    "deploy": {
      "command": "bash",
      "args": ["-c", "npm run deploy"],
      "description": "Deploy the application to production",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "npm",
      "args": ["test"],
      "description": "Run the test suite"
    }
  }
}
